<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action serveur pour imprimer les plannings des agents sélectionnés -->
    <record id="action_print_selected_employee_plannings" model="ir.actions.server">
        <field name="name">Imprimer Planning des Agents</field>
        <field name="model_id" ref="acs_planning.model_acs_planning"/>
        <field name="binding_model_id" ref="acs_planning.model_acs_planning"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
action = records.action_print_employee_plannings()
        </field>
    </record>

    <!-- Retirer editable="bottom" de la liste planning_line_ids -->
    <record id="view_acs_planning_request_form_fix" model="ir.ui.view">
        <field name="name">acs.planning.request.form.fix</field>
        <field name="model">acs.planning.request</field>
        <field name="inherit_id" ref="acs_planning.acs_planning_request_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter un message d'alerte si pas encore sauvegardé -->
            <xpath expr="//page[@name='planning_lines']" position="inside">
                <div class="alert alert-warning text-center" role="alert" invisible="id" style="margin: 20px;">
                    <i class="fa fa-exclamation-triangle"/> 
                    <strong>Veuillez sauvegarder ce Planning Request avant d'ajouter des lignes.</strong>
                    <br/>
                    <small>Cliquez sur le bouton Enregistrer en haut pour continuer.</small>
                </div>
            </xpath>
            <!-- Retirer l'attribut editable -->
            <xpath expr="//field[@name='planning_line_ids']/list" position="attributes">
                <attribute name="editable"></attribute>
            </xpath>
            <!-- Masquer le champ si pas d'ID et ajouter le contexte -->
            <xpath expr="//field[@name='planning_line_ids']" position="attributes">
                <attribute name="invisible">not id</attribute>
                <attribute name="context">{'default_planning_id': id}</attribute>
            </xpath>
            <!-- Changer le domaine de employee_id -->
            <xpath expr="//field[@name='planning_line_ids']//field[@name='employee_id']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>
        </field>
    </record>

    <!-- Retirer editable="bottom" du template de planning -->
    <record id="view_acs_planning_request_template_form_fix" model="ir.ui.view">
        <field name="name">acs.planning.request.template.form.fix</field>
        <field name="model">acs.planning.request.template</field>
        <field name="inherit_id" ref="acs_planning.acs_planning_request_template_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter un message d'alerte si pas encore sauvegardé -->
            <xpath expr="//page[@name='planning_lines']" position="inside">
                <div class="alert alert-warning text-center" role="alert" invisible="id" style="margin: 20px;">
                    <i class="fa fa-exclamation-triangle"/> 
                    <strong>Veuillez sauvegarder ce Planning Template avant d'ajouter des lignes.</strong>
                    <br/>
                    <small>Cliquez sur le bouton Enregistrer en haut pour continuer.</small>
                </div>
            </xpath>
            <!-- Retirer l'attribut editable -->
            <xpath expr="//field[@name='planning_line_ids']/list" position="attributes">
                <attribute name="editable"></attribute>
            </xpath>
            <!-- Masquer le champ si pas d'ID et ajouter le contexte -->
            <xpath expr="//field[@name='planning_line_ids']" position="attributes">
                <attribute name="invisible">not id</attribute>
                <attribute name="context">{'default_planning_template_id': id}</attribute>
            </xpath>
            <!-- Changer le domaine de employee_id -->
            <xpath expr="//field[@name='planning_line_ids']//field[@name='employee_id']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>
        </field>
    </record>

</odoo>
