<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Employee Form to Add Planning Smart Button -->
    <record id="view_employee_form_planning_button" model="ir.ui.view">
        <field name="name">hr.employee.form.planning.button</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Add smart button in button_box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_planning" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-calendar"
                        invisible="planning_count == 0">
                    <field name="planning_count" widget="statinfo" string="Planning"/>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Inherit Employee Public Form to Add Planning Smart Button -->
    <record id="view_employee_public_form_planning_button" model="ir.ui.view">
        <field name="name">hr.employee.public.form.planning.button</field>
        <field name="model">hr.employee.public</field>
        <field name="inherit_id" ref="hr.hr_employee_public_view_form"/>
        <field name="arch" type="xml">
            <!-- Add smart button in button_box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_planning" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-calendar"
                        invisible="planning_count == 0">
                    <field name="planning_count" widget="statinfo" string="Planning"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
